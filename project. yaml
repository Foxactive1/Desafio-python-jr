api_specification:
  base_url: "http://localhost:8000"
  version: "v1"
  endpoints:
    root:
      path: "/"
      method: "GET"
      description: "API root with endpoints overview"
    
    health:
      path: "/health"
      method: "GET"
      description: "Health check endpoint"
    
    volunteers_list:
      path: "/voluntarios/"
      method: "GET"
      description: "List volunteers with filtering"
      query_params:
        - name: "skip"
          type: "integer"
          default: 0
          description: "Pagination offset"
        
        - name: "limit"
          type: "integer"
          default: 100
          description: "Pagination limit (max 1000)"
        
        - name: "cargo_pretendido"
          type: "string"
          optional: true
          description: "Filter by desired position"
        
        - name: "disponibilidade"
          type: "enum"
          values: ["manha", "tarde", "noite", "fim_de_semana", "flexivel"]
          optional: true
          description: "Filter by availability"
        
        - name: "status"
          type: "enum"
          values: ["ativo", "inativo", "pendente"]
          optional: true
          description: "Filter by status"
    
    volunteer_create:
      path: "/voluntarios/"
      method: "POST"
      description: "Create new volunteer"
      request_body:
        content_type: "application/json"
        schema_ref: "VolunteerCreate"
    
    volunteer_detail:
      path: "/voluntarios/{id}"
      method: "GET"
      description: "Get volunteer by ID"
      path_params:
        - name: "id"
          type: "integer"
          required: true
    
    volunteer_update:
      path: "/voluntarios/{id}"
      method: "PUT"
      description: "Update volunteer"
      path_params:
        - name: "id"
          type: "integer"
          required: true
      request_body:
        content_type: "application/json"
        schema_ref: "VolunteerUpdate"
    
    volunteer_delete:
      path: "/voluntarios/{id}"
      method: "DELETE"
      description: "Soft delete volunteer"
      path_params:
        - name: "id"
          type: "integer"
          required: true
    
    volunteer_restore:
      path: "/voluntarios/{id}/restore"
      method: "POST"
      description: "Restore deleted volunteer"
      path_params:
        - name: "id"
          type: "integer"
          required: true

data_models:
  Volunteer:
    description: "Main volunteer entity"
    attributes:
      id:
        type: "integer"
        required: true
        description: "Unique identifier"
      
      nome:
        type: "string"
        required: true
        min_length: 1
        max_length: 100
        description: "Full name"
      
      email:
        type: "string"
        required: true
        format: "email"
        unique: true
        description: "Email address"
      
      telefone:
        type: "string"
        required: true
        min_length: 10
        max_length: 20
        description: "Phone number"
      
      cargo_pretendido:
        type: "string"
        required: true
        min_length: 1
        max_length: 100
        description: "Desired position"
      
      disponibilidade:
        type: "enum"
        values: ["manha", "tarde", "noite", "fim_de_semana", "flexivel"]
        required: true
        description: "Availability schedule"
      
      status:
        type: "enum"
        values: ["ativo", "inativo", "pendente"]
        default: "pendente"
        description: "Volunteer status"
      
      data_inscricao:
        type: "date"
        required: true
        default: "current_date"
        description: "Registration date"
      
      is_deleted:
        type: "boolean"
        default: false
        description: "Soft delete flag"

enums:
  Disponibilidade:
    description: "Availability time slots"
    values:
      MANHA: "manha"
      TARDE: "tarde"
      NOITE: "noite"
      FIM_SEMANA: "fim_de_semana"
      FLEXIVEL: "flexivel"
  
  StatusVoluntario:
    description: "Volunteer status options"
    values:
      ATIVO: "ativo"
      INATIVO: "inativo"
      PENDENTE: "pendente"

